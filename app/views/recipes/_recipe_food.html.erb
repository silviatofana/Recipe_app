<tr>
  <td> <%= recipe_food.food.name %></td>
  <td><%= recipe_food.quantity %> <%= recipe_food.food.measurement_unit %></td>
  <td><%= recipe_food.food.price * recipe_food.quantity %></td>
  <% if recipe_food.recipe.user == current_user %>
    <td>
        <%= button_to "Remove", recipe_recipe_food_path(recipe_food.recipe_id, recipe_food.id), method: :delete, class: "btn btn-outline-dark align-self-center"%>
    </td>
  <% end %>
</tr>
